@page "/roles/delete/{roleid}"
@model LearnPageRazor.Areas.Admin.Pages.Role.Delete
@{
    ViewData["Title"] = "Xóa vai trò";
}
<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="Model.StatusMessage"/>

<hr/>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>Bạn có chắc chắn xóa <strong>@Model.Role.Name</strong></p>

            <div class="form-group mt-2">
                <input type="submit" value="Đồng ý" class="btn btn-danger" />
                <a asp-page="Index" class="btn btn-dark">Danh sách các vai trò</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
